{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://elasticbox.net/schemas/notification",
  "type": "object",
  "required": [
    "_id",
    "user",
    "resource",
    "unread",
    "metadata",
    "subject",
    "schema"
  ],
  "additionalProperties": false,
  "properties": {
    "_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 36
    },
    "metadata": {
      "type": "object",
      "properties": {
        "creationTimestamp": {
          "type": "number"
        },
        "deletionTimestamp": {
          "type": "number"
        },
        "resourceVersion": {
          "type": "number"
        }
      }
    },
    "resource": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "Chart",
            "Namespace",
            "Pod",
            "ReplicationController",
            "Service"
          ]
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "namespace": {
          "type": "string",
          "minLength": 1,
          "maxLength": 63
        }
      }
    },
    "schema": {
      "type": "string",
      "enum": [
        "http://elasticbox.net/schemas/notification"
      ]
    },
    "subject": {
      "type": "string"
    },
    "trigger": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "unread": {
      "type": "boolean",
      "default": true
    },
    "user": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    }
  },
  "type:": "object"
}
